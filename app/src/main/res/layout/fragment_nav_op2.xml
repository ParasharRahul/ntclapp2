<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ps1.ntcl.ntclapp2.navitems.nav_op2">

    <RelativeLayout
        android:id="@+id/n2_relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center">

        <Button
            android:id="@+id/n2_button1"
            android:clickable="true"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="@string/n2_search_button1"
            android:textSize="15sp"
            android:textAlignment="gravity"/>

        <Button
            android:id="@+id/n2_button2"
            android:clickable="true"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/n2_button1"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/n2_search_button2"
            android:textSize="15sp"
            android:textAlignment="gravity"/>

    </RelativeLayout>
 </ScrollView>
